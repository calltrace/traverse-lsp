{
  "name": "traverse-lsp",
  "displayName": "Traverse Solidity Analyzer",
  "description": "Solidity code analysis and visualization powered by Traverse",
  "version": "0.0.1",
  "publisher": "traverse-team",
  "repository": {
    "type": "git",
    "url": "https://github.com/traverse-team/traverse-lsp"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Visualization"
  ],
  "keywords": [
    "solidity",
    "ethereum",
    "smart contracts",
    "call graph",
    "mermaid"
  ],
  "activationEvents": [
    "onLanguage:solidity",
    "workspaceContains:**/*.sol"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "solidity",
        "aliases": ["Solidity", "solidity"],
        "extensions": [".sol"],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "Traverse LSP",
      "properties": {
        "traverse-lsp.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Traces the communication between VSCode and the Traverse LSP server"
        },
        "traverse-lsp.serverPath": {
          "scope": "machine",
          "type": "string",
          "default": "",
          "description": "Path to the Traverse LSP server executable. If empty, uses the bundled server"
        },
        "traverse-lsp.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server"
        }
      }
    },
    "commands": [
      {
        "command": "traverse.generateCallGraph.workspace",
        "title": "Generate Call Graph (Workspace)",
        "category": "Traverse"
      },
      {
        "command": "traverse.generateSequenceDiagram.workspace",
        "title": "Generate Sequence Diagram (Workspace)",
        "category": "Traverse"
      },
      {
        "command": "traverse.generateAll.workspace",
        "title": "Generate All Diagrams (Workspace)",
        "category": "Traverse"
      },
      {
        "command": "traverse.analyzeStorage.workspace",
        "title": "Analyze Storage (Workspace)",
        "category": "Traverse"
      },
      {
        "command": "traverse.restart",
        "title": "Restart Language Server",
        "category": "Traverse"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder",
          "command": "traverse.generateCallGraph.workspace",
          "group": "traverse@1"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "traverse.generateSequenceDiagram.workspace",
          "group": "traverse@2"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "traverse.generateAll.workspace",
          "group": "traverse@3"
        },
        {
          "when": "explorerResourceIsFolder",
          "command": "traverse.analyzeStorage.workspace",
          "group": "traverse@4"
        }
      ],
      "commandPalette": [
        {
          "command": "traverse.generateCallGraph.workspace"
        },
        {
          "command": "traverse.generateSequenceDiagram.workspace"
        },
        {
          "command": "traverse.generateAll.workspace"
        },
        {
          "command": "traverse.analyzeStorage.workspace"
        },
        {
          "command": "traverse.restart"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.0.0"
  }
}